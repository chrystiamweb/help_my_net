<%= turbo_frame_tag dom_id(task) do %>
<blockquote>
  <p>
    <strong>Company:</strong>
    <%= task.company %>
  </p>

  <p>
    <strong>User:</strong>
    <%= task.user %>
  </p>

  <p>
    <strong>Employees:</strong>
    <%= task.employees.map{|t| t.name}.to_sentence %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= task.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= task.description %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= task.address %>
  </p>

  <p>
    <strong>Latitude:</strong>
    <%= task.latitude %>
  </p>

  <p>
    <strong>Longitude:</strong>
    <%= task.longitude %>
  </p>

  <% if defined?(:show_map) %>
    <%= turbo_stream_from "employees" %>
    <%= turbo_frame_tag "turbo_map_#{task.id}" do %>
      <%= render 'tasks/map', task: task %>
    <% end %>
  <% end %>

  <p>
    <%=link_to 'Edit this task', edit_task_path(task) %>
    <%= button_to "Destroy this task", task, method: :delete %>
  </p>

</blockquote>
<% end %>
